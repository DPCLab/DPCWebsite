doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name = "description" content = "Research on Russian Internet propaganda, done for an Independent Project on digital propaganda and censorship at Phillips Academy")
    meta(name = "author" content = "Jeffrey Shen, Miles McCain")
    title Russia | Digital Propaganda &amp; Censorship 
    link(rel = "icon" type = "image/png" sizes = "32x32" href = "../assets/graphics/icon/favicon.png")
    link(href='../bower_components/bulma/css/bulma.min.css' rel='stylesheet' type='text/css')
    link(href='../bower_components/font-awesome/web-fonts-with-css/css/fontawesome-all.min.css' rel='stylesheet' type='text/css')
    link(href='../dist/CSS/russia.css', rel='stylesheet', type='text/css')
  body
    include ../components/header.pug  
    include ../components/components.pug  
    
    #body
      .has-text-centered
        br
        h1.is-size-2.title Russian Meddling
        span.subtitle.is-size-4 A four-part series exploring Russian meddling on American social media.
        span.heading.is-size-6.names Miles McCain and Jeffrey Shen
        br
      br
      .columns
        .column.is-12
          each post in getDirectories()
            .post
              -var data = JSON.parse(read("./src/views/russia/" + post + "/config.json"));
              .img.full
                img(src = data.featured_image_url)
              h1
                a(href = "./" + post)=data.title
              p.heading
                span.tag-inline=data.tag
                | &nbsp;•&nbsp;
                span(style = "font-size:14px;") #{data.date}
              p=data.description
            hr 
          .epilogue 
            p Stay tuned—More blog posts and projects coming!
        //- .column.is-4
      br
      br
    script(src='../bower_components/jquery/dist/jquery.min.js')
    script(src='../dist/script-min.js')
    script(src = "//static.getclicky.com/js" type = "text/javascript")
    script(type = "text/javascript").
      try{
        click.init(101144012);
      }
      catch(e){}
    noscript
      p
        img(alt = "Clicky" width = "1" height = "1" src = "//in.getclicky.com/101144012ns.gif")
